<Page x:Class="agency.Pages.SelectPages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:agency.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" 
      Title="Выберите раздел">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button Height="30" Width="200" Margin="3" Name="BtnSelectTour"
                            Click="BtnSelectTour_Click" Content="Актуальные туры"></Button>
            <Button Height="30" Width="200" Margin="3" Name="BtnSelectEmployee"
                            Click="BtnSelectEmployee_Click" Content="Cотрудники"></Button>
            <Button Height="30" Width="200" Margin="3" Name="BtnSelectHotel"
                            Click="BtnSelectHotel_Click" Content="Отели"></Button>
        </StackPanel>
    </Grid>
</Page>
